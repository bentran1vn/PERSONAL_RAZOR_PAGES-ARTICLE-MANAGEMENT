@page
@model TranDinhThienTan_NET1705_A02.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "Shared/_HomeLayout";
}

<h1 class="text-center text-primary display-4 mt-4">Edit System Account</h1>

<hr class="mb-4"/>

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-lg p-4 mb-5 bg-white rounded">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="SystemAccount.AccountId" class="control-label font-weight-bold"></label>
                    <input asp-for="SystemAccount.AccountId" class="form-control" placeholder="Enter Account ID" readonly/>
                    <span asp-validation-for="SystemAccount.AccountId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SystemAccount.AccountName" class="control-label font-weight-bold"></label>
                    <input asp-for="SystemAccount.AccountName" class="form-control" placeholder="Enter Account Name" readonly/>
                    <span asp-validation-for="SystemAccount.AccountName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SystemAccount.AccountEmail" class="control-label font-weight-bold"></label>
                    <input asp-for="SystemAccount.AccountEmail" class="form-control" placeholder="Enter Account Email" readonly/>
                    <span asp-validation-for="SystemAccount.AccountEmail" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="SystemAccount.AccountRole" class="control-label font-weight-bold"></label>
                    <input asp-for="SystemAccount.AccountRole" class="form-control" placeholder="Enter Account Role" readonly/>
                    <span asp-validation-for="SystemAccount.AccountRole" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="SystemAccount.AccountPassword" class="control-label font-weight-bold"></label>
                    <input asp-for="SystemAccount.AccountPassword" class="form-control" placeholder="Enter Account Role" readonly/>
                    <span asp-validation-for="SystemAccount.AccountPassword" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-lg btn-primary shadow-sm px-5 py-2">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-page="Index" class="btn btn-secondary btn-lg">Back to List</a>
</div>
